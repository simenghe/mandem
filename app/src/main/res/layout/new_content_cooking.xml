<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_new_booking"
        tools:context=".MakeBooking">
    <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/havasPink"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintVertical_bias="0.23000002"/>
    <TextView
            android:text="Shaftesbury"
            android:layout_width="360dp"
            android:layout_height="67dp"
            android:textSize="40dp"
            android:textColor="@color/havasPink"
            android:id="@+id/txt_room" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintVertical_bias="0.201"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_boardTitle"/>
    <Button
            android:text="Exit"
            android:textColor="@color/havasPink"
            android:layout_height="50dp"
            android:background="@drawable/grey_button"
            android:id="@+id/btn_cancel"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.93" android:layout_width="193dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_save" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.947"/>
    <android.support.v7.widget.CardView android:layout_width="666dp"
                                        android:layout_height="224dp"
                                        app:cardBackgroundColor="@android:color/white" android:id="@+id/card_booking"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                        android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.61"
                                        app:layout_constraintHorizontal_bias="0.51">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

            <Spinner
                    android:layout_width="127dp"
                    android:layout_height="39dp"
                    android:id="@+id/spinner_end" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_start" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.608" app:layout_constraintVertical_bias="0.0"
                    android:visibility="visible"
                    android:spinnerMode="dropdown" android:background="@drawable/roundedtext"/>
            <TextView
                    android:text="END TIME"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp" android:id="@+id/txt_endtime"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintVertical_bias="0.498" app:layout_constraintHorizontal_bias="0.54"/>
            <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="309dp"
                    android:imeOptions="actionDone"
                    android:layout_height="41dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/roundedtext"
                    android:textColor="@android:color/black"
                    android:ems="10"
                    android:id="@+id/edit_title" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.932"
                    app:layout_constraintVertical_bias="0.151" android:visibility="visible"/>
            <TextView
                    android:text="MEETING TITLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.577" app:layout_constraintVertical_bias="0.033"/>
            <TextView
                    android:text="NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_NAME"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.044" app:layout_constraintVertical_bias="0.03"/>
            <TextView
                    android:text="START TIME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_start"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.047" app:layout_constraintVertical_bias="0.501"/>
            <EditText
                    android:layout_width="219dp"
                    android:layout_height="41dp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:background="@drawable/roundedtext"
                    android:textColor="@android:color/black"
                    android:ems="10"
                    android:id="@+id/edit_name" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.062"
                    app:layout_constraintVertical_bias="0.151" android:visibility="visible"/>
            <Spinner
                    android:layout_width="127dp"
                    android:layout_height="39dp"
                    android:id="@+id/spinner_start" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_start" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.051" app:layout_constraintVertical_bias="0.0"
                    android:visibility="visible"
                    android:spinnerMode="dropdown" android:background="@drawable/roundedtext"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="282dp"
            android:layout_height="67dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="40dp"
            android:id="@+id/txt_boardTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.218"
            tools:text="Book a meeting" android:text="Book a meeting" android:visibility="visible"
            android:layout_marginTop="112dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Save"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:background="@drawable/button_bluesave"
            android:id="@+id/btn_save" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.794"
            app:layout_constraintVertical_bias="0.93" android:layout_width="283dp"/>

</android.support.constraint.ConstraintLayout>