<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:color="@color/darkblue"
        android:background="@color/darkblue"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_bar"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:background="@android:color/white"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="418dp" android:layout_marginStart="418dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/constraintLayout">
        <android.support.v4.widget.SwipeRefreshLayout android:layout_width="502dp"
                                                      android:layout_height="426dp"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                                                      app:layout_constraintHorizontal_bias="1.0"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      app:layout_constraintVertical_bias="1.0" android:id="@+id/swiper">

            <android.support.v7.widget.RecyclerView

                    android:layout_width="500dp"
                    android:layout_height="411dp"
                    tools:listitem="@android:layout/test_list_item"
                    android:visibility="visible" android:id="@+id/recycle_main"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="4dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.277" app:layout_constraintVertical_bias="1.0"/>
        </android.support.v4.widget.SwipeRefreshLayout>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:background="@color/darkblue"
            android:layout_width="427dp"
            android:layout_height="538dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="532dp"
            android:layout_marginRight="532dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0">

        <TextView
                android:text="Important Scammer Meeting"
                android:layout_width="350dp"
                android:layout_height="82dp"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:id="@+id/txt_bookedTitle" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.639"
                app:layout_constraintVertical_bias="0.406"/>
        <TextView
                android:text="Booked until 10:00AM"
                android:layout_width="350dp"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_height="47dp"
                android:id="@+id/txt_nextBooking" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.639"
                app:layout_constraintVertical_bias="0.162"/>
        <TextView
                android:text="James Baker"
                android:layout_width="350dp"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                android:layout_height="47dp"
                android:id="@+id/txt_bookingUser" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.639"
                app:layout_constraintVertical_bias="0.566"/>
        <Button
                android:text="+Book a meeting"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom1"
                android:id="@+id/fab" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.871"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.16"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>