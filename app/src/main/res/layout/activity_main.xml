<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:color="@android:color/white"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">
    <android.support.v7.widget.RecyclerView

            android:layout_width="438dp"
            android:layout_height="362dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" tools:listitem="@android:layout/test_list_item"
            android:visibility="visible" android:id="@+id/recycle_main"
            app:layout_constraintHorizontal_bias="0.136" app:layout_constraintVertical_bias="0.942"/>
    <TextView
            android:text="TextView"
            android:layout_width="319dp"
            android:layout_height="96dp"
            android:id="@+id/txt_curDate"
            android:visibility="visible" android:textSize="36sp"
            app:autoSizeTextType="uniform"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textClock" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recycle_main" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.857" app:layout_constraintVertical_bias="0.352"/>
    <TextClock
            android:id="@+id/textClock"

            android:layout_width="289dp"
            android:layout_height="91dp"
            android:format12Hour="hh:mm a"
            android:gravity="center_horizontal"
            android:textColor="#d41709"
            android:textSize="44sp"
            android:textStyle="bold"
            tools:targetApi="jelly_bean_mr1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recycle_main"
            android:layout_marginEnd="296dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="296dp"
            app:layout_constraintVertical_bias="0.527"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:srcCompat="@android:drawable/ic_input_add"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_curDate"
            app:layout_constraintStart_toEndOf="@+id/recycle_main" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintVertical_bias="0.754" app:backgroundTint="@color/colorAccent" app:fabSize="auto"
            android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>